---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Inicio">
  <section class="relative min-h-screen flex flex-col items-center justify-center pt-20 bg-[#02040a] overflow-hidden">
    
    <div style="position: absolute; top: -10%; left: -10%; width: 500px; height: 500px; background: rgba(30, 58, 138, 0.3); filter: blur(120px); border-radius: 50%;"></div>
    <div style="position: absolute; bottom: -10%; right: -10%; width: 500px; height: 500px; background: rgba(8, 145, 178, 0.2); filter: blur(120px); border-radius: 50%;"></div>

    <div class="relative z-10 text-center px-4">
      <p class="text-blue-500 tracking-[0.8em] uppercase text-xs font-black mb-6">Presentamos</p>
      
    <h1 class="font-black italic uppercase leading-[0.95] tracking-normal text-white" 
   	 style="font-size: clamp(3rem, 10vw, 9rem); font-family: 'Bebas Neue', sans-serif;">
 	 REVOLUCION <br/>
 	 JUVENIL <br/>
  	<span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-400">2026</span>
	</h1>

      <div class="flex items-center justify-center gap-4 mt-10">
        <div class="h-[1px] w-12 bg-blue-900"></div>
		<p class="mt-8 text-[10px] md:text-sm tracking-[0.6em] font-bold uppercase text-gray-400">
  Música • Palabra • Presencia
</p>
        <div class="h-[1px] w-12 bg-blue-900"></div>
      </div>

      <div class="mt-14">
        <a href="#" class="inline-block bg-white text-black font-black uppercase italic px-10 py-4 skew-x-[-15deg] transition-all hover:bg-blue-600 hover:text-white hover:scale-110">
          <span class="inline-block skew-x-[15deg]">Asegura tu lugar</span>
        </a>
      </div>
    </div>
  </section>
  <section class="py-20 bg-[#02040a] flex flex-col items-center justify-center border-t border-white/5">
  <h2 class="text-3xl md:text-5xl font-black italic uppercase tracking-tighter mb-10 text-blue-500">
    Faltan para el gran día:
  </h2>
  
  <div id="countdown" class="flex gap-4 md:gap-10 text-center">
    <div class="flex flex-col">
      <span id="days" class="text-6xl md:text-8xl font-black italic text-white drop-shadow-[0_0_15px_rgba(255,255,255,0.3)] tracking-tighter leading-none">00</span>
      <span class="text-[10px] uppercase tracking-[0.3em] text-blue-400 font-bold mt-2">Días</span>
    </div>
    <div class="text-6xl md:text-8xl font-black italic text-blue-600 leading-none">:</div>
    <div class="flex flex-col">
      <span id="hours" class="text-6xl md:text-8xl font-black italic text-white drop-shadow-[0_0_15px_rgba(255,255,255,0.3)] tracking-tighter leading-none">00</span>
      <span class="text-[10px] uppercase tracking-[0.3em] text-blue-400 font-bold mt-2">Horas</span>
    </div>
    <div class="text-6xl md:text-8xl font-black italic text-blue-600 leading-none">:</div>
    <div class="flex flex-col">
      <span id="minutes" class="text-6xl md:text-8xl font-black italic text-white drop-shadow-[0_0_15px_rgba(255,255,255,0.3)] tracking-tighter leading-none">00</span>
      <span class="text-[10px] uppercase tracking-[0.3em] text-blue-400 font-bold mt-2">Min</span>
    </div>
  </div>
</section>

<script>
  // Fecha ajustada: 18 de Abril de 2026 a las 18:00 hrs
  // (Año, Mes indexado en 0, Día, Hora, Minuto)
  const EVENT_DATE = new Date(2026, 3, 18, 18, 0, 0).getTime();

  function updateCountdown() {
    const now = new Date().getTime();
    const diff = EVENT_DATE - now;

    if (diff <= 0) {
      const container = document.getElementById('countdown');
      if (container) container.innerHTML = "<span class='text-4xl font-black italic uppercase text-blue-500'>¡EL DÍA HA LLEGADO!</span>";
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

    // Solo actualizamos si los elementos existen en el DOM
    const d = document.getElementById('days');
    const h = document.getElementById('hours');
    const m = document.getElementById('minutes');

    if (d && h && m) {
      d.innerText = days.toString().padStart(2, '0');
      h.innerText = hours.toString().padStart(2, '0');
      m.innerText = minutes.toString().padStart(2, '0');
    }
  }

  setInterval(updateCountdown, 1000);
  updateCountdown();
</script>

  <section class="py-24 bg-[#02040a] px-6">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-5xl md:text-7xl font-black italic uppercase tracking-tighter mb-12 text-center">
      Invitados <span class="text-blue-600">Especiales</span>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="group relative overflow-hidden bg-slate-900 border border-white/10 rounded-xl transition-all hover:border-blue-500 hover:shadow-[0_0_30px_rgba(37,99,235,0.4)]">
        <div class="aspect-[3/4] overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=600" 
            alt="Invitado" 
            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-110"
          />
        </div>
        <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black via-black/80 to-transparent">
          <p class="text-blue-500 font-black uppercase tracking-widest text-xs mb-1">Predicador</p>
          <h3 class="text-3xl font-black italic uppercase italic tracking-tighter">Nombre Invitado</h3>
        </div>
      </div>

      <div class="group relative overflow-hidden bg-slate-900 border border-white/10 rounded-xl transition-all hover:border-cyan-500 hover:shadow-[0_0_30px_rgba(6,182,212,0.4)]">
        <div class="aspect-[3/4] overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1501386761578-e95c938b74c0?q=80&w=600" 
            alt="Banda" 
            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-110"
          />
        </div>
        <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black via-black/80 to-transparent">
          <p class="text-cyan-500 font-black uppercase tracking-widest text-xs mb-1">Banda Invitada</p>
          <h3 class="text-3xl font-black italic uppercase italic tracking-tighter">Nombre Banda</h3>
        </div>
      </div>
      
      <div class="group relative overflow-hidden bg-slate-900 border border-white/10 rounded-xl transition-all hover:border-blue-500 hover:shadow-[0_0_30px_rgba(37,99,235,0.4)]">
        <div class="aspect-[3/4] overflow-hidden">
          <img 
            src="https://images.unsplash.com/photo-1492562080023-ab3dbdf5bb3d?q=80&w=600" 
            alt="Invitado" 
            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-110"
          />
        </div>
        <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black via-black/80 to-transparent">
          <p class="text-blue-500 font-black uppercase tracking-widest text-xs mb-1">Invitado Especial</p>
          <h3 class="text-3xl font-black italic uppercase italic tracking-tighter">Nombre Invitado</h3>
        </div>
      </div>
    </div>
  </div>
</section>
</MainLayout>